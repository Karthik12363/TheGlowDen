<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - The Glow Den</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <script src="~/js/site.js"></script>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="/">
                <img id="logoImage" src="~/images/NewLogo.png" alt="The Glow Den" style="height: 40px;" />
            </a>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item @((ViewData["Active"] as string) == "Home" ? "active" : "")">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item @((ViewData["Active"] as string) == "Services" ? "active" : "")">
                        <a class="nav-link" href="/Home/Services">Services</a>
                    </li>
                    <li class="nav-item @((ViewData["Active"] as string) == "About" ? "active" : "")">
                        <a class="nav-link" href="/About">About</a>
                    </li>
                    <li class="nav-item @((ViewData["Active"] as string) == "Contact" ? "active" : "")">
                        <a class="nav-link" href="/Contact">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    <div class="container">
        @RenderBody()
    </div>

    <footer class="bg-light text-center p-3">
        <p>&copy; 2025 The Glow Den | All Rights Reserved</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
